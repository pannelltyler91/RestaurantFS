  <script>
    //loops through Add To Cart Buttons and if button cliked, adds row with item information
    var AddToCartButtons = document.getElementsByClassName('btn btn-primary')
    console.log(AddToCartButtons);
    for(let i =0; i < AddToCartButtons.length; i++){
      var button = AddToCartButtons[i];
      console.log(button);
      console.log(button.parentElement.firstElementChild.innerHTML);
      let itemName = button.parentElement.firstElementChild.innerHTML;
      let itemPrice = button.parentElement.children[1].innerHTML;
      console.log(itemPrice);
      let cartItem = `<div class="row">
          <label class="col-4"for="cartItem" ><strong>${itemName}</strong></label>
          <div class="col-4"></div>
          <input type="number" class="cartItem col-1" value="1" width="5px">
          <input type="hidden" name="${itemName}" value="${itemName}" id="${itemName}">
          <input type="hidden" name="${itemPrice}" value="${itemPrice}" id="${itemPrice}">
          <div class="col-1"></div>
          <button type="button" class="col-2" >Remove</button>
          </div>
          </div>`;
      button.addEventListener('click', (event) => {
        event.preventDefault();
        console.log('clicked');
        document.getElementById('itemContainer').innerHTML += cartItem;  
      })
    }
    //Checkout out button functionality to call /order POST endpoint
    document.getElementById('checkOutButton').addEventListener('submit', ()=>{
        console.log('Checked Out');
      })

    //loops through remove buttons and if they are clicked removes item from cart
    var removeButtons = document.getElementsByClassName('col-2')
    for(let i=0;i<removeButtons.length;i++){
      console.log(removeButtons);
      let removeButton = removeButtons[i];
